<div class="page-container" style="display: grid; place-items: center; min-height: 80vh;">
    <div class="auth-container">
        <div class="auth-section">
            <h2 class="page-header">Login</h2>
            <form action="/auth/login" method="POST" class="form-container" style="padding: 0; background: none; border: none; backdrop-filter: none;">
                <% if (typeof error !== 'undefined' && error) { %><p style="color: var(--danger-color); margin-bottom: 1rem;"><%= error %></p><% } %>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
            </form>
        </div>
        
        <div class="auth-divider">OR</div>

        <div class="auth-section">
            <h2 class="page-header">Register</h2>
            <form action="/auth/register" method="POST" class="form-container" style="padding: 0; background: none; border: none; backdrop-filter: none;">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Full Name" required>
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Register</button>
            </form>
        </div>
    </div>
</div>
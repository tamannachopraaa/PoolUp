<section class="auth-viewport">
	<div class="auth-card">
		<div class="auth-panel">
			<p class="eyebrow">Welcome back</p>
			<h2 class="auth-title">Log in to PoolUp</h2>
			<p class="auth-subtitle">Access your dashboard, offers, and chats.</p>
			<% if (typeof error !== 'undefined' && error) { %>
				<div class="auth-alert error"><%= error %></div>
			<% } %>
			<form action="/auth/login" method="POST" class="auth-form">
				<label class="field">
					<span>Email</span>
					<input type="email" name="email" placeholder="you@university.edu" required>
				</label>
				<label class="field">
					<span>Password</span>
					<input type="password" name="password" placeholder="••••••••" required>
				</label>
				<button type="submit" class="btn-gradient full-width">Login</button>
			</form>
			
		</div>

		<div class="auth-divider"><span>or</span></div>

		<div class="auth-panel">
			<p class="eyebrow">New here?</p>
			<h2 class="auth-title">Create an account</h2>
			<p class="auth-subtitle">Offer rides, book seats, and stay in sync.</p>
			<% if (typeof error !== 'undefined' && error && !message) { %>
				<div class="auth-alert error"><%= error %></div>
			<% } %>
			<% if (typeof message !== 'undefined' && message) { %>
				<div class="auth-alert success"><%= message %></div>
			<% } %>
			<form action="/auth/register" method="POST" class="auth-form">
				<label class="field">
					<span>Full name</span>
					<input type="text" name="name" placeholder="Alex Doe" required>
				</label>
				<label class="field">
					<span>Email</span>
					<input type="email" name="email" placeholder="you@university.edu" required>
				</label>
				<label class="field">
					<span>Password</span>
					<input type="password" name="password" placeholder="Create a strong password" required>
				</label>
				<button type="submit" class="btn-gradient full-width">Register</button>
			</form>
			<p class="muted-note">By continuing, you agree to our terms and ride community guidelines.</p>
		</div>
	</div>
</section>